<settings>
	
	<!--setting id="langType" type="multiselect" label="Select Language" values="Hindi|English|Kannada|Tamil|Telugu|Malayalam|Marathi|Bengali" default="Hindi"/-->
	<category label="Language Selection">
	<setting id="langHindi" type="bool" label="Hindi?" default="true" />
	<setting id="langEnglish" type="bool" label="English?" default="false" />
	<setting id="langMalayalam" type="bool" label="Malayalam?" default="false" />
	<setting id="langTamil" type="bool" label="Tamil?" default="false" />
	<setting id="langBengali" type="bool" label="Bengali?" default="false" />
	<setting id="langTelugu" type="bool" label="Telugu?" default="false" />
	<setting id="langMarathi" type="bool" label="Marathi?" default="false" />
	<setting id="langKannada" type="bool" label="Kannada?" default="false" />
	<setting id="langGujarati" type="bool" label="Gujarati?" default="false" />
	</category>
	<category label="Options">
	<setting id="tvsortType" type="labelenum" label="TV Shows sorting by" values="Default|Name" default="Default" />
	<setting id="moviessortType" type="labelenum" label="Movies sorting by" values="Name|Newest|Popularity" default="Newest" />
	<setting id="qualityType" type="labelenum" label="Video Quality Selection" values="Highest|720p|404p|360p|Let me Choose" default="720p"/>
	<setting id="perPage" type="labelenum" label="Movies per Page" values="20|40|60" default="20" />
	<setting id="EnableIP" type="bool" label="Enable Indian IP address?" default="false" />
	<setting type="sep" />
	<setting label="any Indian IP address (http://bit.ly/1LhsHMX)" type="ipaddress" enable="!eq(-2,false)" id="ipaddress" default="0.0.0.0"/>
	<setting id="debug" type="bool" label="Enable Debug Mode?" default="false" />
	</category>
	<category label="Premium Login">
	<setting id="username" type="text" label="Username" default="" />
    <setting id="password" type="text" option="hidden" label="Password" enable="!eq(-1,)" default="" />	
	</category>
</settings>